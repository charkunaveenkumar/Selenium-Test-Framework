pipeline {
    agent any

    tools {
        maven 'Maven3'
        jdk 'JDK17'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/charkunaveenkumar/Selenium-Test-Framework.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean install -DskipTests=true'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test -DseleniumGrid=true'
            }
        }

        stage('Stop Selenium Grid') {
            steps {
                echo 'Stopping Selenium Grid if running'
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed'
        }
        failure {
            echo 'Build failed'
        }
        success {
            echo 'Build successful'
        }
    }
}